<%- include("../partials/header")  %>
<%- include("../partials/navbar")  %>
<link rel="stylesheet" href="/css/star.css">
    <div class="container" style="margin-top: 5rem;">
        <%- include("../partials/flash")  %>
       <h6 class="display-6">Cart</h6>

        <div class="row">
            
            <div class="col-lg-8" >
            <% for (let item of userCart){ %> 

                <div class="card mb-3" style="max-width: 90%;">
                    <div class="row g-0">
                      <div class="col-md-4">
                        <img style="width: 200px;" src="<%=item.img %>" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=item.name %></h5>
                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            <form action="/user/<%=currentUser._id  %>/cart/<%=item._id  %>?_method=DELETE" method="POST">
                                <button  class="btn btn-sm btn-outline-danger">Remove</button>
                            </form>
                        </div>
                      </div>
                    </div>
                  </div>



            <% } %> 
            </div>
            <div class="col-lg-4">
                <% totalAmount=0 %>
                <ul class="list-group"></ul>
                <% for (let item of userCart){ %> 

                    <% totalAmount+=item.price %> 
                    <li class="list-group-item"><%= item.name %> -&#8377; <%= item.price %>  </li>
                      

                <%}%>
                </ul>
                <div class="mt-2">
                    <p class="fw-bold">Total Amount &#8377;<%=totalAmount  %> </p>
                    <a href="/cart/payment" class="btn" style="background-color: #ff9100; color: white;">Place Order</a>
                </div> 
            </div>
        </div>

    </div>
<%- include("../partials/footer")  %> 