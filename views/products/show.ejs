<%- include("../partials/header")  %>
<%- include("../partials/navbar")  %>
<link rel="stylesheet" href="/css/star.css">
    <div class="container" style="margin-top: 5rem;">
        <%- include("../partials/flash")  %>
        <div class="row products ">
          
                <div class="col-lg-6 mt-3 mb-3">
                    <div class="card text-center" style="width: 25rem;">
                        <img src="<%=product.img%>" class="card-img-top" alt="<%=product.name%>">
                        <div class="card-body">
                          <h5 class="card-title"><%=product.name%></h5>
                          <h5 class="card-title">$ <%=product.price%></h5>
                          <p class="card-text"><%=product.desc%></p>
                          <a href="#" class="btn btn-success">Buy</a>
                          <!-- <a href="#" class="btn btn-primary">Add to Cart</a> -->
                          <a href="/products/<%=product._id %>/edit " class="btn btn-warning">Edit</a>
                          <form action="/products/<%=product._id %>?_method=Delete" class="mt-3 mb-3" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                          <form action="/user/<%=product._id %>/cart" method="POST">
                            <button class="btn btn-primary" >Add to cart</button>
                          </form>
                        </div>
                      </div>
                </div>
                <!-- Review section -->
                <div class="col-lg-6">
                    <h6 class="display-6">Leave a Review</h6>
                    <form  class="validated-form" action=" /products/<%=product._id%>/review "  method="POST" style="width:70%;" novalidate>
                        <!-- <div class="">
                            <label for="rating" class="form-label" >Rating</label>
                            <input type="Range" class="form-range" min="0" max="5" name="rating" id="rating">
                        </div> -->
                        <fieldset class="starability-basic mb-3">
                          <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                          <input type="radio" id="first-rate1" name="rating" value="1" />
                          <label for="first-rate1" title="Terrible">1 star</label>
                          <input type="radio" id="first-rate2" name="rating" value="2" />
                          <label for="first-rate2" title="Not good">2 stars</label>
                          <input type="radio" id="first-rate3" name="rating" value="3" />
                          <label for="first-rate3" title="Average">3 stars</label>
                          <input type="radio" id="first-rate4" name="rating" value="4" />
                          <label for="first-rate4" title="Very good">4 stars</label>
                          <input type="radio" id="first-rate5" name="rating" value="5" />
                          <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                        <div class="mb-3">
                            <label for="desc" class="form-label" ></label>Comment</label>
                            <textarea id="comment" cols="35" rows="3" class="form-control" name="comment" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <div class="mb-3 mt-3">
                        <%for(let review of product.reviews){%>
                         <div class=" mb-3">
                             <!-- <div class="card-header text-capitalize">
                                <strong></strong> 
                             </div> -->
                             <div class="card-body">
                               <p class="starability-result" data-rating="<%=review.rating%>">
                                Rated: <%=review.rating%>
                              </p>
                              <p  style="color: gray; ">By  <%=review.user%></p>
                               <p class="">Review: <%=review.comment%></p>
                             </div>
                           </div>  
                         <%}%>
                     </div>
                      </form>
                      
                </div>
            
        </div>
    </div>
<%- include("../partials/footer")  %> 